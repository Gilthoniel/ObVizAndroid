<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/details_id"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.obviz.review.DetailsActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/ColorPrimary">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/image_description"
                android:id="@+id/imageView" android:padding="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_developper"
                android:textColor="#fffafafa" android:textStyle="bold"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
                android:layout_marginTop="5dp" android:layout_toLeftOf="@+id/app_date"
                android:layout_toStartOf="@+id/app_date"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:progressTint="#ffdbb72a" android:rating="2.5"
            android:secondaryProgressTint="#fff5ffdd" android:progressBackgroundTint="#fffeffe8"
            android:layout_above="@+id/app_category" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_date"
                android:textColor="#ffffffff"
                android:layout_alignParentTop="false" android:layout_toLeftOf="@+id/app_free"
                android:layout_toStartOf="@+id/app_free" android:layout_alignTop="@+id/app_free"
                android:layout_marginRight="10dp" android:textSize="12sp" android:layout_alignBottom="@+id/app_free"
                android:gravity="bottom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_free"
                android:textStyle="bold" android:textColor="#ffffffff"
                android:layout_below="@+id/ratingBar" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_category" android:layout_below="@+id/app_developper"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="#ffffffff" android:layout_alignRight="@+id/app_developper"
                android:layout_alignEnd="@+id/app_developper"/>
    </RelativeLayout>

    <com.obviz.review.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/ColorPrimary" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
