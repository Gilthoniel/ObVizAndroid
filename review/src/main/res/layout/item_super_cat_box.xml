<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/app_box_width"
    android:layout_height="wrap_content"
    android:background="@drawable/box"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cat_image"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category name\Category Name"
        android:id="@+id/cat_name"
        android:padding="5dp"
        android:textColor="#ff6e6e6e"
        android:gravity="center"
        android:minHeight="40dp"
        android:textSize="12sp"
        android:maxHeight="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cat_image"
        android:layout_alignBottom="@+id/cat_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_name"
        android:padding="5dp"
        android:background="#ffededed">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:id="@+id/trending_up"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/trending_up" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:id="@+id/trending_down"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:src="@drawable/trending_down"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/trending_up" />

        <LinearLayout
            android:id="@+id/best_apps"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/trending_up"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/trending_up"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/trending_up"></LinearLayout>

        <LinearLayout
            android:id="@+id/worst_apps"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/trending_down"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/trending_down"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/trending_down"></LinearLayout>


    </RelativeLayout>



</RelativeLayout>