<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
                android:background="@drawable/box">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/red_indicator"
        android:background="#fffe6861"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:id="@+id/green_indicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:background="#ff90db6a"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/app_logo"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/red_indicator"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application name\nApplication Name"
        android:id="@+id/app_name"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_logo"
        android:layout_alignRight="@+id/app_logo"
        android:layout_alignEnd="@+id/app_logo"
        android:padding="5dp"
        android:textColor="#ff262626"
        android:gravity="center"
        android:minHeight="40dp"
        android:textSize="12sp"
        android:maxHeight="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:background="#ffededed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:id="@+id/app_developer"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/app_category"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/app_developer"
            android:textSize="10sp"
            android:textStyle="italic"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            style="?android:ratingBarStyleSmall"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/app_category"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:id="@+id/app_freedom"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/app_developer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="10sp"
            android:gravity="top|right"
            android:textColor="#ff191919"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>