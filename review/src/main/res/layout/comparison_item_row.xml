<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <lecho.lib.hellocharts.view.PieChartView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pie_app" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topic_title" android:text="Topic" android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pie_app"
            android:layout_alignBottom="@+id/pie_app" android:layout_toLeftOf="@+id/pie_comparison"
            android:layout_toStartOf="@+id/pie_comparison" android:gravity="center" android:textColor="#ff2b2b2b"
            android:textSize="20sp" android:padding="10dp"/>

    <lecho.lib.hellocharts.view.PieChartView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pie_comparison" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>